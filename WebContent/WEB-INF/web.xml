<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Project_Web_Blog</display-name>
  <description>....</description>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>kr.or.blog.common.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>500</error-code>
    <location>/errors/500.jsp</location>
  </error-page>
  <servlet>
    <description></description>
    <display-name>LoginController</display-name>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>kr.or.blog.user.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LogoutController</display-name>
    <servlet-name>LogoutController</servlet-name>
    <servlet-class>kr.or.blog.user.controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ListController</display-name>
    <servlet-name>VisitorsListController</servlet-name>
    <servlet-class>kr.or.blog.visitors.controller.VisitorsListController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VisitorsListController</servlet-name>
    <url-pattern>/visitors/list.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>BoardListController</display-name>
    <servlet-name>BoardListController</servlet-name>
    <servlet-class>kr.or.blog.board.controller.BoardListController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BoardListController</servlet-name>
    <url-pattern>/board/list.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>BoardRegistController</display-name>
    <servlet-name>BoardRegistController</servlet-name>
    <servlet-class>kr.or.blog.board.controller.BoardRegistController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BoardRegistController</servlet-name>
    <url-pattern>/board/regist.do</url-pattern>
  </servlet-mapping>
</web-app>